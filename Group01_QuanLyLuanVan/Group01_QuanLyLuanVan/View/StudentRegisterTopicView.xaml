<Page x:Class="Group01_QuanLyLuanVan.View.StudentRegisterTopicView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Group01_QuanLyLuanVan.View"
       mc:Ignorable="d" 
      xmlns:i= "http://schemas.microsoft.com/xaml/behaviors"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Height="605" Width="700"
      DataContext="{StaticResource StudentRegisterVM}"
      Title="StudentRegisterTopicView"
      Name="StudentRegisterWd">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetMaDT}"
                                   CommandParameter="{Binding ElementName=StudentRegisterWd}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetName="StudentRegisterWd"
                                    Storyboard.TargetProperty="Margin"
                                    From="426,0,0,0"
                                    To="0"
                                    Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49"/>
            <RowDefinition Height="113"/>
            <RowDefinition Height="63"/>
            <RowDefinition Height="53"/>
            <RowDefinition Height="124"/>
            <RowDefinition Height="85"/>
            <RowDefinition Height="80"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">

            <StackPanel Orientation="Horizontal"
                Grid.Row="0" Margin="34,0,0,0">
                <Label Cursor="Hand"
                    Height="45"
                    Grid.Row="0"
                    Width="47"
                    >
                    <materialDesign:PackIcon Kind="ArrowLeft"
                    Foreground="#55b3d9"
                      Height="40"                   
                      Width="35"/>
                    <i:Interaction.Triggers>
                        <i:EventTrigger  EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding back}"
                                                   CommandParameter="{Binding ElementName=DetailTopicwd}"></i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Label>
            </StackPanel>
            <TextBlock
                    Text="ĐĂNG KÝ ĐỀ TÀI"
                    FontWeight = "SemiBold"
                    FontFamily = "{StaticResource Custom}"
                    FontSize = "30"
                    Foreground = "#55b3d9"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            </TextBlock >
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="391*"/>
                <ColumnDefinition Width="309*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="40,0,0,0">

                <StackPanel Orientation="Vertical"
                            >
                    <TextBlock
                    Text="TÊN ĐỀ TÀI"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="620">
                        <TextBox
                        Padding="10"
                        TextWrapping="Wrap"
                        x:Name="TenDeTai"      
                        Width="620"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"                        
                        IsEnabled="False"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0" Height="65" Margin="0,0,-4,0"/>
                    </Border>
                </StackPanel>
            </StackPanel>

        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    Text="TÊN THỂ LOẠI"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300">
                        <TextBox
                        x:Name="TenTheLoai"
                        HorizontalAlignment="Left"
                        Width="300"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsEnabled="False"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="10,0,0,0">
                    <TextBlock
                    Text="TÊN GIẢNG VIÊN HƯỚNG DẪN"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="200">
                        <TextBox
                        x:Name="HoTen"
                        HorizontalAlignment="Left"
                        Width="200"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsEnabled="False"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="10,0,0,0">
                    <TextBlock
                    Text="TRẠNG THÁI"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="100">
                        <TextBox
                        x:Name="TenTrangThai"
                        HorizontalAlignment="Left"
                        Width="100"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsEnabled="False"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="545*"/>
                <ColumnDefinition Width="156*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="40,0,0,0">
                <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                    <TextBlock
                    Text="MÃ ĐỀ TÀI"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="100">
                        <TextBox
                        x:Name="deTaiId"
                        HorizontalAlignment="Left"
                        Width="100"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsEnabled="False"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0" />
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    Text="NGÀY BẮT ĐẦU"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="170">
                        <TextBox
                        x:Name="NgayBatDau"
                        HorizontalAlignment="Left"
                        Width="170"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsEnabled="False"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="10,0,0,0">
                    <TextBlock
                    Text="NGÀY KẾT THÚC"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="170">
                        <TextBox
                        x:Name="NgayKetThuc"
                        HorizontalAlignment="Left"
                        Width="170"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsEnabled="False"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="10,0,0,0">
                    <TextBlock
                    Text="SỐ LƯỢNG THÀNH VIÊN"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="150">
                        <TextBox
                        VerticalAlignment="Center"
                        x:Name="SoLuong"
                        HorizontalAlignment="Left"
                        Width="150"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsEnabled="False"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>


            </StackPanel>
        </Grid>
        <Grid Grid.Row="4">
            <StackPanel Orientation="Vertical"
                        Margin="0,10,0,0">
                <TextBlock
                    Text="MÔ TẢ"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="620">
                    <TextBox
                        Padding="10"
                        TextWrapping="Wrap"
                        x:Name="MoTa"
                        HorizontalAlignment="Left"
                        Width="620"
                        Height="80"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsEnabled="False"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="5">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Text="YÊU CẦU"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="620">
                    <TextBox
                        Padding="10"
                        TextWrapping="Wrap"
                        x:Name="YeuCau"
                        HorizontalAlignment="Left"
                        Width="620"
                        Height="50"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsEnabled="False"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="6">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Text="THÀNH VIÊN"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300">
                        <ComboBox x:Name="multiSelectComboBox" HorizontalAlignment="Left" Width="278" Height="34" Margin="10,0,0,0" IsTextSearchEnabled="False" IsDropDownOpen="False" MaxDropDownHeight="100" materialDesign:HintAssist.Hint="Chọn thành viên">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding FullInfo}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Height" Value="30" />
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </Border>
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300" Margin="20,0,0,0">
                        <TextBox 
                            Padding="10"
                            TextWrapping="Wrap"
                            x:Name="selectedItemTextBlock" Text=""/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="7" Height="86" VerticalAlignment="Center">
            <Button Content="ĐĂNG KÝ"
                    
                            Width="230"
                            BorderThickness="0"
                            x:Name="btnregister"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Background="#55b3d9">
                <!--Click="RegisterButton_Click"-->
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding Register}"
                                                   CommandParameter="{Binding ElementName=StudentRegisterWd}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>

            </Button>

        </Grid>
    </Grid>
</Page>
