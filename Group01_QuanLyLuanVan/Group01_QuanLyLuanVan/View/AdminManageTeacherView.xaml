<Page x:Class="Group01_QuanLyLuanVan.View.AdminManageTeacherView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Group01_QuanLyLuanVan.View"
      mc:Ignorable="d" 
      xmlns:materialDesign = "http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:i = "http://schemas.microsoft.com/xaml/behaviors"
      d:DesignHeight = "605" 
      d:DesignWidth = "700"
      Title="AdminManageTeacherView"
      DataContext="{StaticResource AdManageTeacherVM}"
      x:Name="teachermaxwd">

    <i:Interaction.Triggers >
        <i:EventTrigger EventName = "Loaded" >
            <i:InvokeCommandAction Command = "{Binding LoadTeachersCommand}"
                               CommandParameter="{Binding ElementName= teachermaxwd}"></i:InvokeCommandAction >
        </i:EventTrigger >
    </i:Interaction.Triggers >
    <Border
    Height = "605"
    Width = "700"
    Background = "Transparent"
    CornerRadius = "20"
    BorderThickness = "5">
        <Grid >
            <Grid.RowDefinitions >
                <RowDefinition Height = "65" />
                <RowDefinition Height = "70" />
                <RowDefinition />
            </Grid.RowDefinitions >
            <Grid Grid.Row = "0" >
                <StackPanel Orientation = "Horizontal" >
                    <TextBlock
                    FontWeight = "SemiBold"
                    FontFamily = "{StaticResource Custom}"
                    FontSize = "20"
                    Foreground = "#55b3d9"
                    Margin = "15,10,0,0" Width = "650"
                    HorizontalAlignment = "Center"
                    VerticalAlignment = "Center">
                    <Run Text = "DANH SÁCH GIẢNG VIÊN ĐƯỢC SINH VIÊN ĐĂNG KÝ ĐÔNG" />
                    </TextBlock >
                </StackPanel >
            </Grid >
            <Grid Grid.Row = "1" >
                <StackPanel Orientation = "Horizontal" >
                    <Border
                    Margin = "15,0,0,0"
                    Height = "40"
                    Width = "115"
                    CornerRadius = "16"
                    Background = "#55b3d9"
                    >
                        <ComboBox
                        x:Name = "cbxChon"
                        Style = "{StaticResource MaterialDesignFilledComboBox}"
                        materialDesign:TextFieldAssist.TextBoxViewMargin = "2,-13,-10,0"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius = "14"
                        materialDesign:TextFieldAssist.DecorationVisibility = "Hidden"
                        BorderThickness = "0"
                        materialDesign:HintAssist.FontFamily = "{StaticResource Custom}"
                        materialDesign:HintAssist.Foreground = "White"
                        Background = "White"
                        FontFamily = "{StaticResource Custom}"
                        Height = "35"
                        FontSize = "14"
                        Width = "110"
                        ItemsSource = "{Binding ListTK}" >
                            <ComboBox.ItemTemplate >
                                <DataTemplate >
                                    <StackPanel Orientation = "Horizontal" >
                                        <TextBlock Text = "{Binding}" />
                                    </StackPanel >
                                </DataTemplate >
                            </ComboBox.ItemTemplate >
                        </ComboBox >
                    </Border >
                    <TextBox
                     x:Name = "txbSearch"
                            Width = "508"
                            Height = "40"
                            Margin = "15,0,0,0"
                            BorderBrush = "#55b3d9"
                            Foreground = "Black"
                            FontSize = "14"
                            FontWeight = "SemiBold"
                            materialDesign:HintAssist.Hint = "Tìm kiếm"
                            materialDesign:HintAssist.FontFamily = "{StaticResource Custom}"
                            materialDesign:HintAssist.Foreground = "White"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius = "10"
                            materialDesign:TextFieldAssist.DecorationVisibility = "Hidden"
                            materialDesign:TextFieldAssist.TextBoxViewMargin = "10,6,0,0"
                            BorderThickness = "2"
                            VerticalAlignment = "Center" CaretBrush = "Gray" >
                        <i:Interaction.Triggers >
                            <i:EventTrigger EventName = "TextChanged" >
                                <i:InvokeCommandAction Command = "{Binding SearchTeachersCommand}"
                                                   CommandParameter="{Binding ElementName= teachermaxwd}"></i:InvokeCommandAction >
                            </i:EventTrigger >
                        </i:Interaction.Triggers >
                    </TextBox >
                </StackPanel >
            </Grid >
            <Grid Grid.Row = "2" >
                <StackPanel >
                    <Border
                    
                    
                    Height = "50"
                    CornerRadius = "10"
                    >

                        <Grid >
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width = "140" />
                                <ColumnDefinition Width = "333" />
                                <ColumnDefinition Width = "120" />
                            </Grid.ColumnDefinitions >
                            <Grid Grid.Column = "0" Grid.ColumnSpan="2" Margin="0,0,306,0" >
                                <StackPanel Orientation = "Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            >
                                    <TextBlock Text = "MÃ SỐ"
                                       HorizontalAlignment = "Center"
                                            VerticalAlignment = "Center"

                                       FontFamily = "{StaticResource Custom}"
                                       FontSize = "12"
                                       FontWeight = "SemiBold"
                                       
                                       />

                                </StackPanel >


                            </Grid >
                            <Grid Grid.Column = "1" Grid.ColumnSpan="2" Margin="0,0,90,0" >
                                <StackPanel Orientation = "Horizontal" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <TextBlock Text = "TÊN GIẢNG VIÊN"
                                       HorizontalAlignment = "Center"
                                       VerticalAlignment = "Center"
                                       FontFamily = "{StaticResource Custom}"
                                       FontSize = "12"
                                       FontWeight = "SemiBold"
                                       />
                                </StackPanel >

                            </Grid >
                            <Grid Grid.Column = "2" Margin="0,0,-36,0" >
                                <StackPanel Orientation = "Horizontal" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <TextBlock Text = "SỐ LƯỢNG"
                                       
                                       HorizontalAlignment = "Center"
                                            VerticalAlignment = "Center"
                                       FontFamily = "{StaticResource Custom}"
                                       FontSize = "12"
                                       FontWeight = "SemiBold"
                                      />
                                </StackPanel >

                            </Grid >

                        </Grid >

                    </Border >
                    <ListView
                    x:Name = "ListTeacherView"
                    Height = "410"
                    
                    SelectionMode = "Single"
                    ScrollViewer.VerticalScrollBarVisibility = "Hidden"
                    ItemsSource = "{Binding ListStudent}" 
                    Foreground="White"
                    >
                        <ListView.ItemTemplate >
                            <DataTemplate>
                                <Border
                                Width = "645"
                                Height = "40"
                                CornerRadius = "10"
                                Margin = "0,0,10,0"
                                Background = "#55b3d9"
                                >
                                    <Grid >
                                        <Grid.ColumnDefinitions >
                                            <ColumnDefinition Width = "140" />
                                            <ColumnDefinition Width = "333" />
                                            <ColumnDefinition Width = "120" />
                                        </Grid.ColumnDefinitions >
                                        <Grid Grid.Column = "0" >
                                            <TextBlock
                                            Text = "{Binding GiangVienId}"
                                            HorizontalAlignment = "Center"
                                            VerticalAlignment = "Center"
                                            FontFamily = "{StaticResource Custom}"
                                            FontSize = "12"
                                            >
                                            </TextBlock >
                                        </Grid >
                                        <Grid Grid.Column = "1" >
                                            <TextBlock
                                            Text = "{Binding HoTen}"
                                            HorizontalAlignment = "Center"
                                            VerticalAlignment = "Center"
                                            FontFamily = "{StaticResource Custom}"
                                            FontSize = "12"
                                            Margin = "10,0,0,0"
                                            >
                                            </TextBlock >
                                        </Grid >
                                        <Grid Grid.Column = "2" >
                                            <TextBlock
                                            Text = "{Binding SoLuongNhom}"
                                            HorizontalAlignment = "Center"
                                            VerticalAlignment = "Center"
                                            FontFamily = "{StaticResource Custom}"
                                            FontSize = "12"
                                            Margin = "5,0,0,0"
                                            >
                                            </TextBlock >
                                        </Grid >
                  
                                    </Grid >

                                </Border >
                            </DataTemplate >
                        </ListView.ItemTemplate >
                        <ListView.ItemsPanel >
                            <ItemsPanelTemplate >
                                <WrapPanel Orientation = "Vertical" />
                            </ItemsPanelTemplate >
                        </ListView.ItemsPanel >

                    </ListView >
                </StackPanel >
            </Grid >
        </Grid >

    </Border >
</Page>
