                FontSize=" 25"
                Margin="0,20,0,10"                    
                Foreground="#55b3d9"
                FontWeight="Bold"
                HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1">
            <Border Background="#fdf5e6" CornerRadius="30"
                        Height="300" Width="520"
                        Margin="0,120,0,0"
                        HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <Image Source="/Resource/Image/congratulation.png" 
                           HorizontalAlignment="Center" 
                           Margin="0,-182,0,0" 
                           Width="240" Height="270"/>
                    <TextBlock TextAlignment="Center" 
                               FontSize="16"
                               FontFamily="{StaticResource Custom}">
                            <Run Text="CHÚC MỪNG BẠN "/>
                            <LineBreak/>
                            <Run Text="ĐÃ HOÀN THÀNH LUẬN VĂN!"/>
                    </TextBlock>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,30,0,0">
                        <Button Content="Đính kèm file"
                                FontFamily="Josefin Sans"
                                Foreground="Black"
                                Background="White"
                                Width="200"
                                Margin="0,0,20,0"
                                BorderThickness="0"
                                materialDesign:ButtonAssist.CornerRadius="10">
                        </Button>
                        <Button Content="Nộp"
                                FontFamily="Josefin Sans"
                                Foreground="White"
                                Background="#55b3d9"
                                Width="70"
                                materialDesign:ButtonAssist.CornerRadius="10">
                        </Button>
                    </StackPanel>
                </StackPanel>

            </Border>
        </Grid>
    </Grid>
</Page>
