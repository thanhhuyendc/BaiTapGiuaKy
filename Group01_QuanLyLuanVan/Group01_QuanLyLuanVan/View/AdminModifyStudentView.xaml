<Page x:Class="Group01_QuanLyLuanVan.View.AdminModifyStudentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Group01_QuanLyLuanVan.View"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="700"
      Title="AdminModifyStudentView">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetST}"
                                   CommandParameter="{Binding ElementName=DetailStwd}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border
    CornerRadius="15"
    Background="White"
    >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="Transparent">
                    <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            >

                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical"
                                Margin="0,0,0,0">
                        <TextBlock
                        Margin="-15,0,0,70"
                        HorizontalAlignment="Center"
                        Text="THÔNG TIN SINH VIÊN"
                        FontSize="24"
                        Foreground="#55b3d9"
                        FontFamily="{StaticResource Custom}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="MÃ SỐ"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"/>
                                <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                        x:Name="MaST"
                                        HorizontalAlignment="Left"
                                        Width="150"
                                        FontFamily="{StaticResource Custom}"
                                        BorderThickness="0"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                        IsEnabled="False"
                                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                    Margin="10,0,0,0">
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="HỌ TÊN"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"/>
                                <TextBox
                                x:Name="TenSV"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Left"
                                Width="200"
                                BorderThickness="0.5"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="THÊM HỌ TÊN"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                >
                            <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center">
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="SỐ ĐIỆN THOẠI"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                            />
                                <TextBox
                                x:Name="SDTSV"
                                HorizontalAlignment="Left"
                                Width="150"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="0.5"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="THÊM SDT"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            />
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                    Margin="10,0,0,0">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="NGÀY SINH"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Center"/>
                                <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10">
                                    <DatePicker
                                    x:Name="NgaySinhSV"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Width="200"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="Black"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center" Height="19" Width="46">
                            <TextBlock                               
                                Text="ĐỊA CHỈ"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                FontSize="12"/>
                        </StackPanel>
                        <TextBox           
                            x:Name="DCSV"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Center"
                            Width="370"
                            Height="29"
                            BorderThickness="0.5"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="THÊM ĐỊA CHỈ"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            HorizontalScrollBarVisibility="Auto"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center" Height="19" Width="86">
                            <TextBlock
                                Text="ĐỊA CHỈ EMAIL"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                FontSize="12"/>
                        </StackPanel>
                        <TextBox
                            x:Name="eMAILSV"
                            Margin="0,0,0,0"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Center"
                            Width="370"
                            Height="29"
                            BorderThickness="0.5"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="NHẬP EMAIL"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            HorizontalScrollBarVisibility="Auto"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Button Content="CẬP NHẬT"
                            Margin="0,70,0,0"
                            Width="170"
                            BorderThickness="0"
                            x:Name="btnupdate"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Background="#55b3d9">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding Update}"
                                                   CommandParameter="{Binding ElementName=DetailStwd}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <Button Content="XÓA"
                            Margin="30,70,0,0"
                            Width="170"
                            BorderThickness="0"
                            x:Name="btndelete"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Background="#55b3d9">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding Delete}"
                                                   CommandParameter="{Binding ElementName=DetailStwd}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </StackPanel>

                        <Button Margin="529,50,23,10" Background="#55b3d9">
                            <TextBlock Text="Quay lại"
                                       Height="30"
                                       Width="53"
                                       MaxWidth="53"/>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding back}"
                                                   CommandParameter="{Binding ElementName=DetailStwd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>
